#!/usr/bin/env bash

groupadd -f bedtools
# Correção de permissões da pasta /opt/backup-server-bedrock
chgrp -R bedtools /opt/backup-server-bedrock

# Criação do arquivo de log
chgrp bedtools /var/log/bedrock-backup.log
chgrp bedtools /var/log/bedrock-update.log
chmod g+rw /var/log/bedrock-backup.log
chmod g+rw /var/log/bedrock-update.log
chmod 711 /usr/bin/bedrock-backup
chmod 711 /usr/bin/bedrock-update
#exit 0

exit 0
